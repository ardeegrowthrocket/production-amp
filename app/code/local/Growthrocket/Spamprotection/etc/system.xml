<?xml version="1.0"?>
<config>
	  <tabs>
		<gr_systemtab translate="label" module="spamprotection">
            <label>Growth Rocket</label>
            <sort_order>500</sort_order>
        </gr_systemtab>
	  </tabs>
	  <sections>
		<gr_spam_section  translate="label" module="spamprotection">
		<label>Spam Protection</label>
		<tab>gr_systemtab</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>
					<groups>
				      <gr_spam_section_group translate="label"> 
					  <label>Spam Protection Settings</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </enable>
						   <threshold_time translate="label">
							   <label>Threshold Time</label>
							   <frontend_type>text</frontend_type>
							   <sort_order>20</sort_order>
							   <show_in_default>1</show_in_default>
							   <show_in_website>1</show_in_website>
							   <show_in_store>0</show_in_store>
							   <comment>Use second, minutes hours. ex. 5 minutes</comment>
						   </threshold_time>
						   <threshold_request translate="label">
							   <label>Threshold Request</label>
							   <frontend_type>text</frontend_type>
							   <sort_order>30</sort_order>
							   <show_in_default>1</show_in_default>
							   <show_in_website>1</show_in_website>
							   <show_in_store>0</show_in_store>
						   </threshold_request>
						   <whitelist_ip translate="label">
							   <label>Whitelist Ip's</label>
							   <frontend_type>textarea</frontend_type>
							   <sort_order>40</sort_order>
							   <show_in_default>1</show_in_default>
							   <show_in_website>1</show_in_website>
							   <show_in_store>0</show_in_store>
							   <comment>Use comma to separate multiple IP's</comment>
						   </whitelist_ip>
						   <blocked_ip translate="label">
							   <label>Blocked Ip's</label>
							   <frontend_type>textarea</frontend_type>
							   <sort_order>40</sort_order>
							   <show_in_default>1</show_in_default>
							   <show_in_website>1</show_in_website>
							   <show_in_store>0</show_in_store>
							   <comment>Use comma to separate multiple IP's</comment>
						   </blocked_ip>
					   </fields>
					   </gr_spam_section_group>
					</groups>
		</gr_spam_section>
	  </sections>
</config>
