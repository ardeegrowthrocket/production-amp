<?xml version="1.0" ?>
<config>
    <tabs>
        <grfitment translate="label" module="hfitment">
            <label>GrowthRocket Fitment</label>
            <sort_order>100</sort_order>
        </grfitment>
    </tabs>
    <sections>
        <hfitment>
            <label>Route Management</label>
            <tab>grfitment</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings>
                    <label>Indexer Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable Selective Store Reindex</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <stores>
                            <label>Store Ids</label>
                            <comment><![CDATA[Comma separated store ids]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </stores>
                    </fields>
                </settings>
            </groups>
        </hfitment>
    </sections>
</config>